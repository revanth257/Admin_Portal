doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Product
        link(rel='stylesheet', href='/static/css/style.css', type='text/css')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
    body
        .sidebar
            a(href="/home") Home
            a(href="/products") Products
            a(href="/category") Categories

        .content
            a(class='dropdown-trigge btn white showercmodel' href='#' style='background-color:#ffd800;margin-right: 3px;margin-top: 5px;font-size:12px' data-target='dropdown1') Create Product
            table.table.catTable
                thead
                    tr
                        th(scope="col") #
                        th(scope="col") Product Name
                        th(scope="col") Product Type
                        th(scope="col") Product Cost
                        th(scope="col") Product Category
                        th(scope="col") Actions
                tbody

            .modal#myModal
                .modal-dialog.modal-lg
                    .modal-content

                        // Modal Header
                        .modal-header
                            h4.modal-title Modal Heading
                            button.close(type='button', data-dismiss='modal') &times;

                        // Modal body
                        .modal-body
                            form
                                div.form-group
                                    label(for="pName" class="inputNameLabel") Product Name
                                    input(id="pName" name="pcName" type="text" class="form-control " data-label="Reference Number" placeholder="Enter your Product Name")

                                div.form-group
                                    label(for="pType" class="inputNameLabel") Product Type
                                    input(id="pType" name="pType" type="text" class="form-control " data-label="Reference Number" placeholder="Enter your Product Description")

                                div.form-group
                                    label(for="pPrice" class="inputNameLabel") Product Price
                                    input(id="pPrice" name="pPrice" type="number" class="form-control " data-label="Reference Number" placeholder="Enter your Category Description")

                                div.form-group
                                    label(for="select_P_categ" class="inputNameLabel") Product Caegory
                                    select(id="select_P_categ" name="select_P_categ" class="select_P_categ form-control" )
                                    
                            

                        // Modal footer
                        .modal-footer
                            button.btn.btn-primary.createCat(type='button') Create
                            button.btn.btn-danger(type='button', data-dismiss='modal') Close

    script(src='/static/js/vendors/jquery-3.4.1.min.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js')
    script(src='/static/js/products.js')
