doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Side Menu Example
    link(rel='stylesheet', href='/static/css/style.css', type='text/css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
  body
    .sidebar
      a(href="/home") Home
      a(href="/products") Products
      a(href="/categories") Categories

    .content
        a(class='dropdown-trigge btn white showercmodel' href='#' style='background-color:#ffd800;margin-right: 3px;margin-top: 5px;font-size:12px' data-target='dropdown1') Create Category
        table.table.catTable
            thead
                tr
                    th(scope="col") #
                    th(scope="col") Category Name
                    th(scope="col") Category Descrption
                    th(scope="col") Actions
            tbody

      
        .modal#myModal
            .modal-dialog.modal-lg
                .modal-content

                    // Modal Header
                    .modal-header
                        h4.modal-title Modal Heading
                        button.close(type='button', data-dismiss='modal') &times;

                    // Modal body
                    .modal-body
                        form
                            div.form-group
                                label(for="pcName" class="inputNameLabel") Category Name
                                input(id="pcName" name="pcName" type="text" class="form-control mandatoryLocal" data-label="Reference Number" placeholder="Enter your Category Name")

                            div.form-group
                                label(for="pcDesc" class="inputNameLabel") Category Description
                                input(id="pcDesc" name="pcDesc" type="text" class="form-control mandatoryLocal" data-label="Reference Number" placeholder="Enter your Category Description")
                        

                    // Modal footer
                    .modal-footer
                        button.btn.btn-primary.createCat(type='button') Create
                        button.btn.btn-danger(type='button', data-dismiss='modal') Close

  script(src='/static/js/vendors/jquery-3.4.1.min.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js')
  script(src='/static/js/category.js')